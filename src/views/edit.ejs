</head>

<body>
    <!--nav bar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">WL HOME</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link-red" href="/create">Create User<span class="sr-only">(current)</span></a>
                </li>
                </form>
        </div>
    </nav>


    <!--Form -->
    <div class="Container">
        <form action="/update-user" method="post">
            <fieldset>
                <legend>Update User</legend>
                <div class="form-group update-id">
                    <label>Id</label>
                    <input type="id" class="form-control" id="exampleInputName" name="userId" value="<%= userEdit.id %>">
                </div>
            <div class="form-group">
                <label>Name</label>
                <input type="name" class="form-control" id="exampleInputName" name="name" value="<%= userEdit.name %>">
            </div>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email" value="<%= userEdit.email %>">
            </div>
            <div class="form-group">
                <label>City</label>
                <input type="city" class="form-control" id="exampleInputCity" name="city" value="<%= userEdit.city %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
